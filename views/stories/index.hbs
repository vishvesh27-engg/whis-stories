<style>
   body{
    background-color: grey;
   }
   h1{
    color: white;
     font-family: "Times New Roman", Times, serif;
   }
   .card{
    overflow: hidden;
    border-radius: 10px;
   }
   .card:hover {
  box-shadow: 0 8px 16px 0 rgba(255,0,255,0.8);
}
</style>
<h1><center>Public Stories</center></h1>
<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-content center-align">
                           <div class="card-image">
                {{{editIcon user ../user _id}}}
            </div>
                <h5>{{title}}</h5>
                <p>{{stripTags (truncate body 150)}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/stories/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No stories to display</p>
    {{/each}}
</div>